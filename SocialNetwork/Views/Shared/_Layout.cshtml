@using Microsoft.AspNetCore.Http;
@using SocialNetwork.Core.Application.Helpers;
@using SocialNetwork.Core.Application.ViewModels.Usuarios;


@inject IHttpContextAccessor httpContext;
@{
    UsuariosViewModel usuario = httpContext.HttpContext.Session.Get<UsuariosViewModel>("Usuarios");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialNetwork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialNetwork.styles.css" asp-append-version="true" />
</head>
<body class="text-dark">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img class="facebook" src="https://www.pngmart.com/files/5/Twitter-Transparent-Background.png" />
                <a class="text-black fw-bold navbar-brand" asp-area="" asp-controller="Publicaciones" asp-action="Index"><h2></h2></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 mymargin2">
                        @if (usuario != null)
                        {
                           <li>
                               <img style="height:40px;width:40px" x="0" y="0" height="100%" preserveAspectRatio="xMidYMid slice" width="100%" src="@usuario.Img_Profile"></img>
                           </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Publicaciones" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-area="" asp-controller="Amigos" asp-action="Index">Friends</a>
                            </li>
                        
                            <li class="nav-item">
                                <a class="nav-link dropdown-toggle fw-bold" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Options
                                </a>

                                <ul class="dropdown-menu mymargin" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item">Options</a></li>
                                    <li><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="LogOut">Log Out</a></li>
                                </ul>

                            </li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SocialNetwork - @DateTime.Now.Date</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
