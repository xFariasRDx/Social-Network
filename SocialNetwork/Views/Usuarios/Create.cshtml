@using SocialNetwork.Core.Application.ViewModels.Usuarios;
@model SaveUsuariosViewModel;

@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Login";
}

<section class="gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <center>

                        @Html.ValidationSummary(false,"",new{@class = "text-danger"})

                    </center>
                    <form method="post" enctype="multipart/form-data" asp-controller="Usuarios" asp-action="Create">

                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-2 pb-5">

                                <input type="hidden" asp-for="Id" />

                                <h2 class="fw-bold mb-2 text-uppercase mb-5">Create An Account</h2>

                                <div class="mt-4"></div>

                                <div class="form-outline form-white mb-4 ">
                                    <label class="form-label" asp-for="Nombre">First Name</label>
                                    <input asp-for="Nombre" class="form-control form-control-lg" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" asp-for="Apellido">Last Name</label>
                                    <input asp-for="Apellido" class="form-control form-control-lg" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <p>@Model.Existing</p>
                                    <label class="form-label" asp-for="Usuario">NickName</label>
                                    <input asp-for="Usuario" class="form-control form-control-lg" />
                                    <span asp-validation-for="Usuario" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" asp-for="Telefono">Phone</label>
                                    <input asp-for="Telefono" class="form-control form-control-lg" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" asp-for="Correo">Email</label>
                                    <input asp-for="Correo" class="form-control form-control-lg" />
                                    <span asp-validation-for="Correo" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" asp-for="Password">Password</label>
                                    <input asp-for="Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" asp-for="Confirm_Password">Confirm Password</label>
                                    <input asp-for="Confirm_Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Confirm_Password" class="text-danger"></span>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <label asp-for="Img_Upload" class="form-label">Select a image</label>
                                    <input required asp-for="Img_Upload" class="form-control form-control-lg" />
                                    <span asp-validation-for="Img_Upload" class="text-danger"></span>
                                </div>

                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg">
                                    <label class="form-check-label" for="form2Example3g">
                                        I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                                    </label>
                                </div>

                                <button class="btn btn-outline-warning btn-lg px-5" type="submit">Sign In</button>

                            </div>

                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
